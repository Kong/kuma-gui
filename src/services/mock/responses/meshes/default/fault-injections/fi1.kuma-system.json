{
  "type":"FaultInjection",
  "mesh":"default",
  "name":"fi1.kuma-system",
  "sources":[
    {
      "match":{
        "service":"web"
      }
    }
  ],
  "destinations":[
    {
      "match":{
        "service":"backend"
      }
    }
  ],
  "conf":{
    "delay":{
      "percentage":50,
      "value":"0.010s"
    },
    "abort":{
      "percentage":40,
      "httpStatus":500
    },
    "responseBandwidth":{
      "percentage":40,
      "limit":"50kbps"
    }
  }
}
